@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pt-4">
    <div class="col-md-6">
        <h2 class="text-primary">Company List</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i>&nbsp;  Create new Company
        </a>
    </div>
</div>
<br />

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comp in Model)
        {
            <tr>
                <th scope="row">@comp.Id</th>
                <td>@comp.Name</td>
                <td>@comp.Address</td>
                <td>@comp.City</td>
                <td>@comp.State</td>
                <td>@comp.Zip</td>
                <td>
                    <div class="w-75 btn-group-sm" role="group">
                        <a asp-controller="Company" asp-action="Edit" asp-route-id="@comp.Id" class="btn btn-sm btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>&nbsp; Edit
                        </a>
                        <a asp-controller="Company" asp-action="Delete" asp-route-id="@comp.Id" class="btn btn-sm btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>&nbsp; Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
