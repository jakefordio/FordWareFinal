@model IEnumerable<Project>
@{
    ViewData["Title"] = "Admin - Project List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pt-4">
    <div class="col-md-6">
        <h2 class="text-primary">Project List</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-controller="Project" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i>&nbsp;  Create new project
        </a>
    </div>
</div>
<br />

<table id="admin_project_table" class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">ImageURL</th>
            <th scope="col">LinkToProject</th>
            <th scope="col">OriginalPrice</th>
            <th scope="col">AmountPaid</th>
            <th scope="col">RemainingBalance</th>
            <th scope="col">CategoryId</th>
            <th scope="col">CompanyId</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <th scope="row">@project.Id</th>
                <td>@project.Title</td>
                <td>@project.Description</td>
                <td>
                    <img src="@project.ImageURL" class="img-thumbnail w-25">
                </td>
                <td>@project.LinkToProject</td>
                <td>@project.OriginalPrice</td>
                <td>@project.AmountPaid</td>
                <td>@project.RemainingBalance</td>
                <td>@project.Category.Name</td>
                <td>@project.Company.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>&nbsp; Edit
                        </a>
                        <a id="delete_project_button" data-projectid="@project.Id" class="btn btn-sm btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>&nbsp; Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript" src="~/js/projects.js"></script>
}