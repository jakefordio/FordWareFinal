@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pt-4">
    <div class="col-md-6">
        <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i>&nbsp;  Create new category
        </a>
    </div>
</div>
<br />

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Display Order</th>
            <th scope="col">Created On</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <th scope="row">@cat.Id</th>
                <td>@cat.Name</td>
                <td>@cat.DisplayOrder</td>
                <td>@cat.CreatedOn.ToString()</td>
                <td>
                    <div class="w-75 btn-group-sm" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>&nbsp; Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-sm btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>&nbsp; Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
